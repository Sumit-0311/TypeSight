<%- include('./header.ejs') %>
<style>
body{
    background-color:#e69c8f;
}
.main {
    background-color: #e69c8f;
    width: 45%;
    height: 42%;
    margin: 8.6em auto;
    border-radius: 1.5em;
    box-shadow: 9px 9px 16px rgba(238, 106, 62, 0.7),
    -9px -9px 16px rgba(234, 127, 91, 0.7);
}
    
.sign {
    padding-top: 40px;
    color: black;
    font-family: 'Ubuntu', sans-serif;
    font-weight: bold;
    font-size: 38px;
    }
    
.un {
    width: 74%;
    color: rgb(38, 50, 56);
    font-weight: 560;
    font-size: 14px;
    letter-spacing: 1px;
    background: rgba(136, 126, 126, 0.04);
    padding: 10px 20px;
    border: none;
    border-radius: 20px;
    outline: none;
    box-sizing: border-box;
    border: 1.2px solid black;
    margin-bottom: 50px;
    margin-left: 46px;
    text-align: center;
    margin-bottom: 27px;
    font-family: 'Ubuntu', sans-serif;
}
    
form.form1 {
    padding-top: 3.4%;
}
    
    .pass {
    width: 76%;
    color: rgb(38, 50, 56);
    font-weight: 700;
    font-size: 14px;
    letter-spacing: 1px;
    background: rgba(136, 126, 126, 0.04);
    padding: 10px 20px;
    border: none;
    border-radius: 20px;
    outline: none;
    box-sizing: border-box;
    border: 1px solid black;
    margin-bottom: 50px;
    margin-left: 46px;
    text-align: center;
    margin-bottom: 27px;
    font-family: 'Ubuntu', sans-serif;
    }
    
    .un:focus, .pass:focus,.un:hover, .pass:hover {
    border: 1px solid white !important;
    background: white;
    color: black;
}
    
    .submit {
      cursor: pointer;
        border-radius: 5em;
        color: #fff;
        background: transparent;
        border: 1px solid black;
        padding-left: 40px;
        padding-right: 40px;
        padding-bottom: 10px;
        padding-top: 10px;
        font-family: 'Ubuntu', sans-serif;
        margin-left: 35%;
        font-size: 13px;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.04);
    }

    @media (max-width: 600px) {
        .main {
            border-radius: 0px;
        }
    }
    .form {
        background:rgba($form-bg,.9);
        padding: 40px;
        max-width:600px;
        margin:40px auto;
        border-radius:$br;
        box-shadow:0 4px 10px 4px rgba($form-bg,.3);
    }
    .top-row {
        &:after {
        content: "";
        display: table;
        clear: both;
    }
    div {
    float:left;
    width:580;
    margin-right:4%;
    &:last-child { 
      margin:0;
    }
  }
}
.sub-entry {
    width: 50%;
    float: left;
}
.ltext{
    font-size: 10px;
    margin-top:15px;
    margin-left:1%;
}

.forgot {
    color: black;
    padding-top: 15px;
}

.forgot:focus, .forgot:hover {
    text-decoration: none;
    color:white;
    padding-top: 15px;
}
</style>
    
<body>
    <div class="main">
        <div class="form">
            <div id="signup">
                <h1>Sign Up for Free</h1>
                <form class="form1" action="/register" method="POST">
                    <div class="top-row">
                        <div class="sub-entry">
                            <input class="un" type="text" required autocomplete="off" name="firstname" placeholder="First Name" />
                        </div>
                        <div class="sub-entry">
                            <input class="un" type="text"required autocomplete="off" name="lastname" placeholder="Last Name"/>
                        </div>
                    </div>
                    <input class="un" type="text" required autocomplete="off" name="username" placeholder="Username"/>
                    
                    <input class="un" type="password"required autocomplete="off" name="password" placeholder="Set Password"/>
                    <button class="submit" type="submit" class="button button-block"/>Signup</button>
                    <br>
                    <p class="forgot" align="center"><a href="/login" class="forgot">Already have an Account? Login Here</a></p>
                    
                </form>
            </div>
        </div>
    </div>
</body>